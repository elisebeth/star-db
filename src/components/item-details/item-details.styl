@media screen and (max-width 600px)
  .item-details
    &__figure
      flex-direction column
      justify-content center
    &__img
      margin-bottom 25px
    &__content
      margin 0 !important
    .content
      &__stats
        margin 0 !important
    .stats
      &__item
        text-align center

.item-details
  width 100%
  font-family Lato
  &__wrapper
    width 100%
  &__figure
    width 100%
    display flex
    align-items center
    background #2b2a2b
    border-radius 10px
    padding 25px
  &__img 
    display inline-block
    width 20vh
    border-radius 10px
  &__content
    margin-left 50px
  .content
    &__title
      font-size 4vh
      text-align center
      font-weight 600
      margin-bottom 20px  
    &__stats
      margin-left 10px
  .stats
    &__item
      padding 10px
      font-size 2.5vh
      border-top 1px solid #ccc
      
.wrong
  font-size 24px
  width 100%
  text-align center